{
    "id": null,
    "title": "Webservers Metrics",
    "uid": "webservers-metrics",
    "timezone": "browser",
    "schemaVersion": 30,
    "version": 1,
    "panels": [
      {
        "type": "graph",
        "title": "Webserver CPU Usage",
        "gridPos": {"h":8,"w":12,"x":0,"y":0},
        "targets": [
          {
            "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode='idle'}[5m])) * 100)",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "thresholds": [
          {
            "value": 80,
            "colorMode": "critical",
            "op": "gt",
            "line": true
          }
        ],
        "lines": true,
        "linewidth": 2,
        "fill": 1,
        "yaxes": [
          {"format": "percent", "label": "CPU", "logBase": 1, "min": 0, "max": 100},
          {"format": "short", "logBase": 1}
        ]
      },
      {
        "type": "stat",
        "title": "Webserver Uptime (seconds)",
        "gridPos": {"h":4,"w":12,"x":0,"y":8},
        "targets": [
          {
            "expr": "node_time_seconds - node_boot_time_seconds",
            "legendFormat": "{{instance}}",
            "refId": "B"
          }
        ],
        "colorMode": "value",
        "graphMode": "area",
        "format": "s",
        "thresholds": [],
        "options": {
          "reduceOptions": {
            "calcs": ["last"],
            "fields": "",
            "values": false
          },
          "orientation": "auto",
          "textMode": "value"
        }
      }
    ]
  }
  